<div style="display:flex;justify-content:space-between;align-items:center">
  <h2 style="margin:0"><%= event.title %></h2>
  <a class="button-link" href="/events">Back</a>
</div>
<div class="meta" style="margin-top:8px">Capacity: <strong><%= event.capacity %></strong> â€” Booked: <strong><%= booked %></strong></div>

<hr style="margin:12px 0">

<h3>Bookings</h3>
<div>
  <% if bookings.empty? %>
    <div class="muted">No bookings yet. Be the first!</div>
  <% end %>
  <ul>
    <% bookings.each do |b| %>
      <li style="margin:8px 0;display:flex;align-items:center;justify-content:space-between">
        <span><%= b.name %></span>
        <form action="/events/<%= event.id %>/bookings/<%= b.id %>" method="post" style="display:inline">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" style="background:#ef4444">Cancel</button>
        </form>
      </li>
    <% end %>
  </ul>
</div>

<hr style="margin:12px 0">

<h3>Book a seat</h3>
<form action="/events/<%= event.id %>/book" method="post" style="display:flex;gap:8px;align-items:center">
  <input name="name" placeholder="Your name" required style="flex:1;padding:8px;border-radius:6px;border:1px solid #e5e7eb">
  <button type="submit">Book</button>
</form>
